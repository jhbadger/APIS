  %body
    #logo_search.clearfix
      #logo_container
        #main_logo
          %a{ :href => "http://www.jcvi.org" }
            %img{ :src => "http://www.jcvi.org/cms/fileadmin/template/main/images/header-logo.png", :alt => "JCVI logo" }
        %img#curve{ :src => "http://www.jcvi.org/cms/fileadmin/template/main/images/header-curve.gif", :alt => "" }
        #project
          = @project_name
    #menu_border
      #menu
        #menu_container
          %ul
            %li
              %a{ :href => "http://www.jcvi.org" }
                JCVI Home
    #base
      #main_block
        #top_light.clearfix
          \&nbsp;
        #rounded_top
          %b.spiffy
            %b.spiffy1
              %b
            %b.spiffy2
              %b
            %b.spiffy3
            %b.spiffy4
            %b.spiffy5
        #top_dark
          \&nbsp;
        #content
          = @main_content
        #bottom_dark
          \&nbsp;
        #rounded_bottom
          %b.spiffy
            %b.spiffy5
            %b.spiffy4
            %b.spiffy3
            %b.spiffy2
              %b
            %b.spiffy1
              %b
        #bottom_light
          \&nbsp;
    #home_border
      #home_bar
        #home_container
    %p#legal_container
      \&copy;
      %a{ :href => "http://www.jcvi.org" }
        J. Craig Venter Institute
      |&nbsp;
      %a{ :href => "http://www.jcvi.org/cms/legal/privacy-statement/" }
        Privacy Statement
