    %meta{ :content => "text/html; #{@charset}", "http-equiv" => "Content-Type" }
    %link{ :href => "http://www.jcvi.org/cms/fileadmin/template/main/stylesheets/main.css", :rel => "stylesheet", :type => "text/css" }
